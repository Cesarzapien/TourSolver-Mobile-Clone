<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccionesActivity">

    <!-- Header with Back Button and Title -->
    <RelativeLayout
        android:id="@+id/header_acciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/backButton_acciones"
            android:layout_marginTop="4dp"
            android:layout_marginStart="6dp"
            android:layout_width="15dp"
            android:layout_height="24dp"
            android:background="@drawable/back_arrow"
            android:contentDescription="@string/back_button" />

        <View
            android:id="@+id/divider_acciones"
            android:layout_width="1dp"
            android:layout_height="29dp"
            android:layout_toEndOf="@id/backButton_acciones"
            android:layout_marginStart="8dp"
            android:background="#FFFFFF" />

        <TextView
            android:id="@+id/title_acciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/divider_acciones"
            android:layout_marginStart="8dp"
            android:text="Cita"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/actions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="Acciones a realizar"
            android:textColor="#FFFFFF"
            android:textSize="14sp"/>
    </RelativeLayout>

    <!-- New Buttons below Header -->
    <LinearLayout
        android:id="@+id/newButtonLayout_acciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@id/header_acciones"
        android:gravity="center">

        <Button
            android:id="@+id/button1_acciones"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:drawableTop="@drawable/informacion"
            android:gravity="center"
            android:text="" /> <!-- Centra el drawable horizontalmente en el botón -->

        <Button
            android:id="@+id/button2_acciones"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:drawableTop="@drawable/acciones"
            android:gravity="center"
            android:text="" />
        <Button
            android:id="@+id/button1_2_acciones"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:drawableTop="@drawable/informacion"
            android:gravity="center"
            android:text=""
            android:visibility="gone"/> <!-- Centra el drawable horizontalmente en el botón -->

        <Button
            android:id="@+id/button2_2_acciones"
            android:layout_width="0dp"
            android:layout_height="41dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:drawableTop="@drawable/acciones"
            android:gravity="center"
            android:text=""
            android:visibility="gone"/>
        <!-- Centra el drawable horizontalmente en el botón -->

        <Button
            android:id="@+id/button3_2_acciones"
            android:layout_width="0dp"
            android:layout_height="41dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:drawableTop="@drawable/baseline_article_24"
            android:gravity="center"
            android:text=""
            android:visibility="gone"/><!-- Centra el drawable horizontalmente en el botón -->
    </LinearLayout>

    <!-- Map and Details -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttonLayout_acciones"
        android:layout_below="@id/newButtonLayout_acciones"
        android:id="@+id/scroll_view_acciones">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/nameLabel_acciones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Informe"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Added Fields Below -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/contractLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contrato"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp" />

                <EditText
                    android:id="@+id/contractInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false" />

                <TextView
                    android:id="@+id/storeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tienda"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp" />

                <EditText
                    android:id="@+id/storeInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false" />

                <TextView
                    android:id="@+id/visitTypeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipo de Visita"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp" />

                <EditText
                    android:id="@+id/visitTypeInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false" />

                <TextView
                    android:id="@+id/addressLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dirección"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp" />

                <EditText
                    android:id="@+id/addressInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false" />

                <TextView
                    android:id="@+id/observationsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Observaciones"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp" />

                <EditText
                    android:id="@+id/observationsInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false" />

                <TextView
                    android:id="@+id/customerNameLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre del Cliente"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp" />

                <EditText
                    android:id="@+id/customerNameInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ingrese el nombre del cliente"
                    android:inputType="textPersonName"
                    android:enabled="true"
                    android:importantForAccessibility="yes"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:required="true" />
            </LinearLayout>
            <!-- End of Added Fields -->
        </LinearLayout>
    </ScrollView>

    <!-- Fixed Buttons at the Bottom -->
    <LinearLayout
        android:id="@+id/buttonLayout_acciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:weightSum="2"
        android:gravity="center">

        <Button
            android:id="@+id/abandonButton_acciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:drawableTop="@drawable/ic_abandon"
            android:gravity="center"
            android:text="Abandonar"/> <!-- Centra el drawable horizontalmente en el botón -->

        <!-- Divider Line -->
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#FFFFFF" />

        <Button
            android:id="@+id/startButton_acciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:drawableTop="@drawable/ic_start"
            android:gravity="center"
            android:text="Comenzar"/>
        <Button
            android:id="@+id/abandonButton2_acciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:drawableTop="@drawable/baseline_close_24"
            android:gravity="center"
            android:text="Cancelar"
            android:visibility="gone"/> <!-- Centra el drawable horizontalmente en el botón -->

        <!-- Divider Line -->
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#FFFFFF" />

        <Button
            android:id="@+id/startButton2_acciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:drawableTop="@drawable/arrow_right"
            android:gravity="center"
            android:text="Continúe"
            android:visibility="gone"/>
        <!-- Centra el drawable horizontalmente en el botón -->
    </LinearLayout>
</RelativeLayout>